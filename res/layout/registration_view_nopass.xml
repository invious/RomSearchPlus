<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff"
    >
    <ScrollView android:id="@+id/reg_sv"
    	android:layout_width="fill_parent"
    	android:layout_height="fill_parent">
    	<RelativeLayout 
    		android:layout_width="fill_parent"
    		android:layout_height="fill_parent"
    		android:background="#ffffff">
<EditText
android:id="@+id/reg_et_user"
android:layout_marginTop="10dip"
android:layout_width="130dip"
android:layout_height="wrap_content"
android:hint="username"
android:textSize="18sp"
android:maxLines="1"
android:layout_alignParentTop="true"
android:layout_toRightOf="@+id/reg_tv_user" />
<TextView
android:id="@+id/reg_tv_user"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Username: "
android:textSize="18sp"
android:layout_marginTop="20dip"
android:layout_marginBottom="6dip"
android:layout_alignBottom="@+id/reg_et_user"
android:layout_alignParentTop="true"
android:paddingLeft="6dip"
android:layout_alignParentLeft="true" />
<ImageView
android:id="@+id/reg_iv_entry_status_uservalid"
android:layout_width="48dip"
android:src="@drawable/check"
android:layout_height="48dip"
android:scaleType="fitXY"
android:adjustViewBounds="true"
android:layout_marginLeft="10dp"
android:layout_marginRight="10dp"
android:layout_marginTop="8dip"
android:layout_alignParentTop="true"
android:layout_toRightOf="@+id/reg_et_user" />
<EditText
android:id="@+id/reg_et_fullname"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:hint="full name"
android:textSize="18sp"
android:layout_marginRight="10dp"
android:maxLines="1"
android:layout_below="@+id/reg_et_user"
android:layout_alignLeft="@+id/reg_et_user"
android:layout_toRightOf="@+id/reg_tv_fullname" />
<TextView
android:id="@+id/reg_tv_fullname"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Name: "
android:textSize="18sp"
android:maxLines="1"
android:layout_marginTop="10dip"
android:layout_marginBottom="6dip"
android:layout_below="@+id/reg_tv_user"
android:layout_alignBottom="@+id/reg_et_fullname"
android:layout_alignRight="@+id/reg_tv_user" />
<EditText
android:id="@+id/reg_et_email"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:hint="email address"
android:textSize="18sp"
android:layout_marginRight="10dp"
android:inputType="textEmailAddress"
android:maxLines="1"
android:layout_below="@+id/reg_et_fullname"
android:layout_alignLeft="@+id/reg_et_fullname"
android:layout_toRightOf="@+id/reg_tv_email" />
<TextView
android:id="@+id/reg_tv_email"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Email: "
android:textSize="18sp"
android:maxLines="1"
android:layout_marginTop="10dip"
android:layout_marginBottom="6dip"
android:layout_alignBottom="@+id/reg_et_email"
android:layout_below="@+id/reg_tv_fullname"
android:layout_alignRight="@+id/reg_tv_fullname" />
</RelativeLayout>
</ScrollView>
    	<RelativeLayout 
    		android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:layout_centerHorizontal="true"
    		android:layout_alignParentBottom="true" >
<Button
android:id="@+id/reg_btn_cancel"
android:text="Cancel"
android:layout_width="160dip"
android:layout_height="wrap_content"
android:layout_alignParentRight="true" />
<Button
android:id="@+id/reg_btn_register"
android:text="Register"
android:layout_width="160dip"
android:layout_toLeftOf="@+id/reg_btn_cancel"
android:layout_height="wrap_content"
android:layout_alignParentLeft="true" />
</RelativeLayout>
</RelativeLayout>
