<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
android:id="@+id/rl_splash1"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
xmlns:android="http://schemas.android.com/apk/res/android"
>
<ImageView
android:id="@+id/splash_iv_logo"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_alignParentTop="true"
android:layout_centerHorizontal="true"
android:paddingTop="100dip"
android:src="@drawable/title"
>
</ImageView>
 <TextSwitcher android:id="@+id/splash_switcher1"
        android:paddingTop="5dip"
        android:layout_width="fill_parent"
        android:layout_below="@+id/splash_iv_logo"
        android:layout_height="wrap_content" />
<TextSwitcher android:id="@+id/splash_switcher2"
        android:layout_width="fill_parent"
        android:layout_above="@+id/splash_switcher3"
        android:layout_height="wrap_content" />
<TextSwitcher android:id="@+id/splash_switcher3"
        android:layout_width="fill_parent"
        android:paddingTop="10dip"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />
</RelativeLayout>
